<van-dialog id="van-dialog" />
<van-toast id="van-toast" />

<view id="calendar_option">
  <van-button
    id="year_button"
    color="hsl(209, 62%, 49%);"
    plain
    type="primary" 
    size="large"
    bind:click="on_click_year_btn"
  >
  {{ year_btn_val }}
  </van-button>
  <view id="switch_view">
    <van-switch
      active-color="hsl(209, 62%, 49%);"
      checked="{{ range_swt_checked }}"
      bind:change="on_click_range_swt"
    />
  </view>
</view>

<van-calendar
  style="--calendar-height: {{ calendar_height }};"
  type="{{ calendar_type }}"
  poppable="{{ false }}"
  color="hsl(209, 62%, 49%);"
  show-title="{{ false }}"
  show-subtitle="{{ false }}"
  show-confirm="{{ false }}"
  min-date="{{ mindate }}"
  max-date="{{ maxdate }}"
  first-day-of-week="1"
  default-date="{{ defaultdate }}"
  formatter="{{ dayFormatter }}"
  bind:select="on_tap_day"
/>

<van-popup
  show="{{ year_picker_pop }}"
  position="bottom"
>
  <van-picker
    show-toolbar
    columns="{{ year_picker_val }}"
    default-index="{{ year_picker_dft }}"
    bind:cancel="on_cancel_year_picker"
    bind:confirm="on_confirm_year_picker"
  />
</van-popup>