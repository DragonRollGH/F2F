/**index.wxss**/

page {
  background: #f6f6f6;
}

.center {
  text-align: center;
  display: flex;
  justify-content: center;
}

.right {
  text-align: right;
  float: right;
}

.left {
  text-align: left;
  float: left;
}

.page_container {
  margin: 5px;
}

.calendar_option {
  margin: 10px;
  height: 40px;
  display: flex;
  justify-content: space-between;
}

.calendar_option view.picker {
  margin: 10px;
  flex: 1;
  display: flex;
  justify-content: center;
}

.calendar_option view.switch {
  margin: 10px;
  display: flex;
  justify-content: center;
}

.calendar_option .picker .year {
  color: var(--front-color);
  width: 200px;
  flex: 1;
  text-align: center;
}

van-calendar {
  display: flex;
  flex: 1;
}