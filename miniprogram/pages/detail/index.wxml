<view class="date_view">
    <text class="center date_date">{{ mm_val }} {{ dd_val }}th</text>
    <text class="right date_no">No.{{ no_val }}</text>
</view>

<view class="center time_view">
  <view id="st" class="time_block" bindlongpress="pressToEdit">
    <text class="time_title">START</text>
    <text class="time_time center">{{ st_val }}</text>
  </view>
  <view id="et" class="time_block" bindlongpress="pressToEdit">
    <text class="time_title">END</text>
    <text class="time_time">{{ et_val }}</text>
  </view >
</view>

<view class="address_view" >
  <block wx:for="{{ ev_ary }}">
    <view id="ev_ary.{{ index }}" class="address_card" bindlongpress="pressToEdit">
      <view class="address_bar"></view>
      <view class="address_text">
        <view class="cuIcon-location address_address">{{ item.site }}</view>
        <view class="address_content">{{ item.type }}</view>
        <view class="address_line"></view>
        <text class="address_detail">{{ item.info }}</text>
      </view>
    </view>
  </block>
</view>

<button bindtap="on_tap_add_btn"> ADD </button>

<van-popup
  show="{{ time_picker_pop }}"
  position="bottom"
>
  <van-datetime-picker
    type="time"
    value="{{ time_picker_val }}"
    bind:confirm="onInputConfirm"
  />
</van-popup>